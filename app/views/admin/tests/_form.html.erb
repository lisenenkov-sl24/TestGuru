<h3><%= test_edit_header(test)%></h3>
<%= form_with model: [:admin, test], local: true do |form| %>
<% if test.errors.present? %>
Ошибки: <div><%= test.errors.full_messages %></div>
<% end %>
<div>
<%= form.label :title, 'Название' %>
<%= form.text_field :title, size: 100 %>
</div>
<div>
<%= form.label :category_id, 'Категория' %>
<%= form.select :category_id, Category.all.collect { |p| [p.title, p.id] }, include_blank: true %>
</div>
<div>
<%= form.label :level, 'Уровень' %>
<%= form.text_field :level, type: "number" %>
</div>
<div>
<%= form.label :author_id, 'Автор' %>
<%= form.select :author_id, User.all.collect { |p| [p.name, p.id] }, include_blank: true %>
</div>

<%= form.submit %>
<% end %>
<%= link_to 'К тестам', admin_tests_path%>