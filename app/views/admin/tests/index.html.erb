<h2><%= Test.model_name.human(count: 0) %></h2>
<br/>
<%= show_errors(@test) %>
<table class="table">
<tr>
  <th class="sort-by-title" data-column="0"> 
    <%= Test.human_attribute_name(:title) %>
  </th>
  <th  class="sort-by-title" data-column="1">
    <%= Test.human_attribute_name(:category) %>
  </th>
  <th  class="sort-by-title" data-column="2">
    <%= Test.human_attribute_name(:difficulty) %>
  </th>
  <th  class="sort-by-title" data-column="3">
    <%= Test.human_attribute_name(:author) %>
  </th>
  <th>
    <%= Test.human_attribute_name(:time_limit) %>
  </th>
  <th  class="sort-by-title" data-column="5">
    <%= t('.questions_count') %>
  </th>
  <th colspan="3"><%= t('actions') %></th>
</tr>
<%= render @tests %>
</table>

<div><%= link_to t('.create_test'), new_admin_test_path , class: 'btn btn-secondary' %></div>