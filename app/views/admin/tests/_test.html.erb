<tr>
  <td>
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td><%= test.category%></td>
  <td><%= Test.human_attribute_name("difficulties.#{test.difficulty}")%> (<%= test.level %>)</td>
  <td><%= test.author%></td>
  <td><%= time_limit(test.time_limit) %></td>
  <td><%= test.question_count%></td>
  <td><%= link_to t('show'), admin_test_path(test), class: 'btn btn-secondary' %></td>
  <td><%= link_to t('edit'), edit_admin_test_path(test), data: { test_id: test.id, edit_text: t('edit'), cancel_text: t('cancel') }, class: 'btn btn-secondary form-inline-link' %></td>
  <td><%= link_to t('delete'), admin_test_path(test), method: :delete, data: { confirm: t('confirm_deletion') }, class: 'btn btn-secondary' %></td>
</tr>