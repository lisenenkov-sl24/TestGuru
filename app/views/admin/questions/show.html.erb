<p id="notice"><%= notice %></p> 
<h2>Тест <%= @question.test%></h2>
<div><label>Текст вопроса </label><%= @question.body%></div>

<h3>Ответы</h3>
<% @question.answers.select(:text, :correct).each do |answer| %>
  <div><% if(answer.correct) %>
  <b><%= answer.text%></b>
  <% else %>
  <%= answer.text%>
  <% end %>
  </div>
<% end %>
<hr/>
<div>
<%= link_to 'Редактировать', edit_admin_question_path(@question)%>
</div>
<div>
<%= link_to 'Удалить', admin_question_path(@question), method: :delete, data: { confirm: 'Удалить вопрос?' } %>
</div>

<%= link_to 'К вопросу', [:admin, @question.test]%>
