<%= form_with url: login_path, local: true do |form| %>
  <%= show_login_error %>
  <div>
    <%= form.label :name, 'Имя / Email' %><br/>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :password, 'Пароль' %><br/>
    <%= form.password_field :password %>
  </div>

  <%= form.submit %>
<% end %>