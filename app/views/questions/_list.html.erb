<table>
  <tr>
    <th>Вопросы</th>
    <th colspan="2">Действия</th>
  </tr>
  <% questions.each do |question| %>
  <tr>
    <td>
      <%= link_to question.body, question_path(question)%>
    </td>
    <td>
      <%= link_to 'Редактировать', edit_question_path(question)%>
    </td>
    <td>
      <%= link_to 'Удалить', question_path(question), method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
  <% end %>
</table>
